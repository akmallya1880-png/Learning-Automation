*********************************************************************************************************************
public static void RevereachcharinaWord()
        {
            string name = " Praveen Natarajan";
            string[] arrname = name.Split(" ");
            string reverse = "";
            foreach (string word in arrname)
            {
                for (int i = word.Length - 1; i >= 0; i--)
                {
                    reverse += word[i];
                }
                reverse += " ";
            }
            Console.WriteLine(reverse);
        }
