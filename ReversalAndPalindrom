public static void palindromeofString()
        {
            string name = "Madam";
            string reverse = "";
            for (int i = name.Length - 1; i >= 0; i--)
            {
                reverse += name[i];
            }
            if (reverse.Equals(name, StringComparison.OrdinalIgnoreCase))
            {
                Console.WriteLine($"{name} is a palindrom");
            }
        }
