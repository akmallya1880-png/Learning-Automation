Reversal of String
using System;
using System.Collections.Generic;
class ReversalOfWord
{
    public static void Main(string[]args)
    {
        string name="Akshaya Mallya";
       string result="";
        for(int i=name.Length-1;i>=0;i--)
        {
            result=result+name[i];
        }
        Console.WriteLine(result);
    }
}
