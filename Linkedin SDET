Increment Number as Array
using System;
using System.Collections.Generic;
class Program
{
    public static void Main()
    {
        int[]num={9,9,9};
       int carry=1;
       for(int i=num.Length-1;i>=0;i--)
       {
           int sum=num[i]+carry;
           num[i]=sum%10;
           carry=sum/10;
       }
       if(carry>0)
       {
           List<int> result= new List<int>();
           result.Add(carry);
           result.AddRange(num);
           num=result.ToArray();
       }
       foreach(var t in num)
       {
           Console.Write(t+"");
       }
           
       }
    }
**************************************************************************************
Merge Two Arrays
using System;

class Program
{
    static void Main()
    {
        int[] arr1 = {5, 3, 2};
        int[] arr2 = {9, 0, 1};

        int[] merged = new int[arr1.Length + arr2.Length];

        arr1.CopyTo(merged, 0);
        arr2.CopyTo(merged, arr1.Length);

        foreach (int n in merged)
            Console.Write(n + " ");
    }
}
**************************************************************************************
Count Word Occurrences
using System;
using System.Collections.Generic;

class Program
{
    static void Main()
    {
        string sentence = "my name is Claude Claude";
        string[] words = sentence.Split(' ');

        Dictionary<string, int> count = new Dictionary<string, int>();

        foreach (string word in words)
        {
            if (count.ContainsKey(word))
                count[word]++;
            else
                count[word] = 1;
        }

        foreach (var item in count)
        {
            Console.WriteLine(item.Key + " â†’ " + item.Value);
        }
    }
}

**************************************************************************************
Second Smallest Digit in a String
using System;
using System.Linq;

class Program
{
    static void Main()
    {
        string input = "claude2403edualc";

        var digits = input.Where(char.IsDigit)
                          .Select(c => c - '0')
                          .Distinct()
                          .OrderBy(n => n)
                          .ToList();

        if (digits.Count >= 2)
            Console.WriteLine(digits[1]);   // second smallest
        else
            Console.WriteLine("Not enough digits");
    }
}
